@model NeaTICs_v2.Models.Events

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>

@using (Html.BeginForm("Create", "Event", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Eventos</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class="col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextAreaFor(model => model.Content, 15, 0, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Place, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Place, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Place)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreateAt, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.CreateAt, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CreateAt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UpdateAt, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.UpdateAt, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UpdateAt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartAt, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.StartAt, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StartAt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndAt, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.EndAt, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EndAt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Url, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Url, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Url)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageToUpload, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-8">
                <input type="file" id="ImageToUpload" name="ImageToUpload" class="help-block" multiple="multiple" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al Listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
